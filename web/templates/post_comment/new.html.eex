<%= form_for @changeset, post_post_comment_path(@conn, :create, @post), fn f -> %>

  <div class="form-group">
    <%= label f, :Add_a_comment, class: "control-label" %>
    <%= textarea f, :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= submit "Publish", class: "btn btn-primary" %>
  </div>
<% end %>
